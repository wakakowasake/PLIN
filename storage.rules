rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 추억 사진
    match /memories/{tripId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.size < 10 * 1024 * 1024; // 10MB 제한
    }
    
    // 첨부파일 (사진, PDF)
    match /attachments/{tripId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.size < 10 * 1024 * 1024; // 10MB 제한
    }
  }
}
