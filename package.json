{
  "name": "plin",
  "version": "1.0.0",
  "description": "여행 계획 및 기록 관리 애플리케이션 - 설레는 계획부터 소중한 추억까지",
  "main": "public/index.html",
  "scripts": {
    "dev": "vite",
    "serve": "firebase serve --only hosting",
    "build": "vite build",
    "preview": "vite preview",
    "build:css": "npx tailwindcss -i ./public/css/input.css -o ./public/css/style.css --minify",
    "watch:css": "npx tailwindcss -i ./public/css/input.css -o ./public/css/style.css --watch",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore:rules,storage:rules",
    "logs": "firebase functions:log",
    "clean": "rm -rf node_modules functions/node_modules dist",
    "update": "npm update && cd functions && npm update && cd ..",
    "deploy:all": "npm run build && copy /Y dist\\openview.html functions\\openview.html && firebase deploy"
  },
  "keywords": [
    "travel",
    "planner",
    "itinerary",
    "trip",
    "vacation",
    "firebase",
    "pwa"
  ],
  "author": "PLIN Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/plin.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/plin/issues"
  },
  "homepage": "https://plin.ink",
  "dependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/browser": "^8.0.0",
    "@capacitor/core": "^8.0.1",
    "autoprefixer": "^10.4.23",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "node-fetch": "^2.7.0",
    "postcss": "^8.5.6"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^8.0.1",
    "tailwindcss": "^3.4.0",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}